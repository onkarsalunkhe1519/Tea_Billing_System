@model User

@{
    ViewData["Title"] = "Login & Signup";
}

<head>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }

        html, body {
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            /* background: linear-gradient(to right, #003366, #004080, #0059b3, #0073e6); */
            background: linear-gradient(to right, #88b44e, #99c24d, #aacd4c, #bbda4b);
        }

        .wrapper {
            position: relative;
            width: 400px;
            background: #fff;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0px 15px 20px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        .title-text {
            display: flex;
            width: 200%;
            transition: transform 0.6s ease;
        }

        .title {
            width: 50%;
            font-size: 24px;
            font-weight: bold;
            text-align: center;
            padding-bottom: 10px;
        }

       /*  .slide-controls {
            display: flex;
            justify-content: space-between;
            position: relative;
            width: 100%;
            border: 1px solid lightgrey;
            border-radius: 15px;
            margin: 20px 0;
        } */
        .slide-controls {
            display: flex;
            justify-content: space-between;
            position: relative;
            width: 100%;
            height: 50px; /* Ensure proper height */
            border: 1px solid lightgrey;
            border-radius: 15px;
            margin: 20px 0;
            overflow: hidden;
        }



        /* .slide {
            width: 50%;
            text-align: center;
            font-size: 16px;
            font-weight: 500;
            line-height: 50px;
            cursor: pointer;
        } */
        .slide {
            width: 50%;
            text-align: center;
            font-size: 16px;
            font-weight: 500;
            display: flex;
            align-items: center; /* Align text vertically */
            justify-content: center; /* Center horizontally */
            cursor: pointer;
            z-index: 2; /* Ensure text is above the slider */
            position: relative;
        }



        /* .slider-tab {
            position: absolute;
            width: 50%;
            height: 100%;
            background: linear-gradient(to right, #003366, #004080, #0059b3, #0073e6);
            border-radius: 15px;
            transition: 0.6s ease;
        } */
        .slider-tab {
            position: absolute;
            width: 50%;
            height: 100%;
            /* background: linear-gradient(to right, #003366, #004080, #0059b3, #0073e6); */
            background: linear-gradient(to right, #88b44e, #99c24d, #aacd4c, #bbda4b);
            border-radius: 15px;
            transition: 0.6s ease;
            top: 0;
            left: 0; /* Default to Login */
            z-index: 1; /* Place below text */
        }

        input[type="radio"] {
            display: none;
        }

        #signup:checked ~ .slider-tab {
            left: 50%;
        }

        #login:checked ~ .slider-tab {
            left: 0%;
        }

        .form-container {
            
            width: 100%;
            overflow: hidden;
        }

        .form-inner {
            display: flex;
            width: 200%;
            transition: transform 0.6s ease;
        }

        .form-container form {
            width: 50%;
            padding: 10px;
        }

        .logo {
            width: 80px; /* Adjust as needed */
            margin-bottom: 10px;
            margin-left: 125px;
        }

        .field {
            margin-bottom: 15px;
        }

            .field input, .field select {
                width: 100%;
                height: 40px;
                padding: 10px;
                border-radius: 10px;
                border: 1px solid lightgrey;
                font-size: 16px;
            }

        .btn {
            width: 100%;
            height: 45px;
            /* background: linear-gradient(to right, #003366, #004080, #0059b3, #0073e6); */
            background: linear-gradient(to right, #88b44e, #99c24d, #aacd4c, #bbda4b);
            color: #fff;
            font-size: 18px;
            font-weight: bold;
            border: none;
            border-radius: 10px;
            cursor: pointer;
        }
    </style>
</head>

<body>
    <div class="wrapper">
        <img src="~/img/logo.png" alt="Website Logo" class="logo">
        <!-- Slide Controls -->
        <div class="slide-controls">
            <input type="radio" name="slide" id="login" checked>
            <input type="radio" name="slide" id="signup">
            <label for="login" class="slide login">Login</label>
            <label for="signup" class="slide signup">Signup</label>
            <div class="slider-tab"></div>
        </div>

       
        <!-- Form Container -->
        <div class="form-container">
            
            <div class="form-inner">
                <!-- Login Form -->
                <form asp-action="Login" asp-controller="Account" method="post">
                    <h2 class="title">Login Form</h2>
                    <div class="field">
                        <input asp-for="Email" placeholder="Email Address" required>
                    </div>
                    <div class="field">
                        <input asp-for="Password" type="password" placeholder="Password" required>
                    </div>
                    <button type="submit" class="btn">Login</button>
                </form>

                <!-- Signup Form -->
                <form asp-action="Register" asp-controller="Account" method="post">
                    <h2 class="title">Signup Form</h2>
                    <div class="field">
                        <input asp-for="Username" placeholder="Username" required>
                    </div>
                    <div class="field">
                        <input asp-for="Email" placeholder="Email Address" required>
                    </div>
                    <div class="field">
                        <input asp-for="Password" type="password" placeholder="Password" required>
                    </div>
                    <div class="field">
                        <select asp-for="Role">
                            <option value="">Select Role</option>
                            <option value="Admin">Admin</option>
                            <option value="User">User</option>
                            
                        </select>
                    </div>
                    <button type="submit" class="btn">Signup</button>
                </form>
            </div>
        </div>
    </div>

    <script>
        const loginRadio = document.getElementById("login");
        const signupRadio = document.getElementById("signup");
        const formInner = document.querySelector(".form-inner");

        signupRadio.onclick = () => {
            formInner.style.transform = "translateX(-50%)";
        };
        loginRadio.onclick = () => {
            formInner.style.transform = "translateX(0%)";
        };
    </script>
</body>
