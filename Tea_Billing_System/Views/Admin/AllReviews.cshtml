@model IEnumerable<Tea_Billing_System.Models.Review>

<h2 class="mb-4 text-center">All User Reviews</h2>

<!-- Success Message -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<!-- Filter Reviews by Tea Name -->
<form method="get" class="mb-4">
    <div class="row">
        <div class="col-md-3">
            <label for="teaName">Filter by Tea Name:</label>
            <select name="teaName" id="teaName" class="form-control">
                <option value="">All</option>
                @foreach (var tea in ViewBag.TeaList)
                {
                    <option value="@tea">@tea</option>
                }
            </select>
        </div>
        <div class="col-md-6 d-flex align-items-end">
            <button type="submit" class="btn btn-dark">Apply Filter</button>
        </div>
    </div>
</form>

<!-- No Reviews Message -->
@if (!Model.Any())
{
    <div class="alert alert-info">No reviews available.</div>
}

<!-- Reviews Table -->
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>User Email</th>
                <th>Tea Name</th>
                <th>Rating</th>
                <th>Comment</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var review in Model)
            {
                <tr>
                    <td>@review.UserEmail</td>
                    <td>@review.TeaName</td>
                    <td>@review.Rating ⭐</td>
                    <td>@review.Comment</td>
                    <td>@review.ReviewDate.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
</div>













