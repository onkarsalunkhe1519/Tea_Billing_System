<h2 class="text-center my-4" style="color: #343a40;">Sales Dashboard</h2>

<div class="row">
    <!-- Total Revenue Card -->
    <div class="col-md-3 mb-3">
        <div class="card shadow-sm" style="background-color: #d3f7a3;">
            <div class="card-body">
                <h4 class="card-title text-center">Total Revenue</h4>
                <h3 class="text-center">₹@ViewBag.TotalRevenue</h3>
            </div>
        </div>
    </div>

    <!-- Total Orders Card -->
    <div class="col-md-3 mb-3">
        <div class="card shadow-sm" style="background-color: #4CAF50;">
            <div class="card-body">
                <h4 class="card-title text-center">Total Orders</h4>
                <h3 class="text-center">@ViewBag.TotalOrders</h3>
            </div>
        </div>
    </div>

    <!-- Pending Orders Card -->
    <div class="col-md-3 mb-3">
        <div class="card shadow-sm" style="background-color: #ffcc00;">
            <div class="card-body">
                <h4 class="card-title text-center">Pending Orders</h4>
                <h3 class="text-center">@ViewBag.PendingOrders</h3>
            </div>
        </div>
    </div>

    <!-- Delivered Orders Card -->
    <div class="col-md-3 mb-3">
        <div class="card shadow-sm" style="background-color: #17a2b8;">
            <div class="card-body">
                <h4 class="card-title text-center">Delivered Orders</h4>
                <h3 class="text-center">@ViewBag.DeliveredOrders</h3>
            </div>
        </div>
    </div>
</div>

<h3 class="text-center my-4" style="color: #343a40;">Top-Selling Product</h3>

<table class="table table-striped table-hover" style="width: 40%; margin: 0 auto;">
    <thead class="bg-dark text-white">
        <tr>
            <th>Name</th>
            <th>Orders</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tea in ViewBag.TopTeas)
        {
            <tr>
                <td>@tea.TeaName</td>
                <td>@tea.Count</td>
            </tr>
        }
    </tbody>
</table>










