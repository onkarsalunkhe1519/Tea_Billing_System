@model Tea_Billing_System.Models.Product

<!-- Adjusting the container margin to reduce the space from the navigation bar -->
<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh; margin-top: -50px;">
    <div class="col-md-6">
        <!-- White background container with padding and shadow -->
        <div class="bg-white p-4 shadow-sm rounded">
            <h2 class="text-center mb-4">Add New Product</h2>

            <form asp-action="AddProduct" method="post" enctype="multipart/form-data">
                <div class="form-groupmt-2">
                     <label>Name</label> 
                    <input asp-for="Name" class="form-control" placeholder="Enter Product Name"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mt-2">
                    <label>Price</label> 
                    <input asp-for="Price" class="form-control" placeholder="Enter Product Price" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group mt-2">
                    <label>Stock</label> 
                    <input asp-for="Stock" class="form-control" placeholder="Stock" />
                    <span asp-validation-for="Stock" class="text-danger"></span>
                </div>

                <div class="form-group mt-2">
                    <label>Upload Image</label>
                    <input type="file" name="imageFile" class="form-control" />
                </div>

                <button type="submit" class="btn w-100 mt-4" style="background-color:#88b44e">Save</button>
            </form>
        </div>
    </div>
</div>




