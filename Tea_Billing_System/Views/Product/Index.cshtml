@model IEnumerable<Tea_Billing_System.Models.Product>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3> Product List</h3>
    <!-- Add New Product Button aligned to the right -->
    <a asp-action="AddProduct" class="btn btn-dark">
        <i class="fas fa-plus-circle"></i> Add Product
    </a>
</div>


<!-- Product Table -->
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Image</th>
                <th>Name</th>
               
                <th>Price</th>
                <th>Stock</th>
              
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>
                        <img src="@item.ImageUrl" alt="Tea Image" width="50" height="50" class="rounded-circle" />
                    </td>
                    <td>@item.Name</td>
                  
                    <td>₹@item.Price</td>
                    <td>@item.Stock</td>
                   
                    <td>
                        <!-- Delete Button with Icon -->
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash-alt"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
























