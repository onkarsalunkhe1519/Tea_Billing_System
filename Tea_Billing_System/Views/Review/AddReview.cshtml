@model Tea_Billing_System.Models.Review

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4">
                <h2 class="text-center mb-3">Leave a Review for @ViewBag.TeaName</h2>

                <form asp-action="AddReview" method="post">
                    <input type="hidden" asp-for="TeaName" value="@ViewBag.TeaName" />

                    <div class="mb-3">
                        <label class="form-label fw-bold">Rating (1-5)</label>
                        <select asp-for="Rating" class="form-select">
                            <option value="1">⭐☆☆☆☆</option>
                            <option value="2">⭐⭐☆☆☆</option>
                            <option value="3">⭐⭐⭐☆☆</option>
                            <option value="4">⭐⭐⭐⭐☆</option>
                            <option value="5">⭐⭐⭐⭐⭐</option>
                        </select>
                        <span asp-validation-for="Rating" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Comment</label>
                        <textarea asp-for="Comment" class="form-control" rows="4" placeholder="Write your review here..."></textarea>
                        <span asp-validation-for="Comment" class="text-danger"></span>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-success px-4">
                            <i class="fas fa-paper-plane"></i> Submit Review
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- FontAwesome for icons -->
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>












